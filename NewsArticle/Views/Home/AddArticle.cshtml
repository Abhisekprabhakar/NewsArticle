@model DataModel.article

@{
    ViewBag.Title = "AddArticle";
}

<h2>AddArticle</h2>

@using (Html.BeginForm("AddArticle", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>article</h4>
        <hr />
